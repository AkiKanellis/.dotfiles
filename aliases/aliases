# symfony
alias osymfcc='php app/console cache:clear'
alias osymfai='php app/console assets:install'
alias osymfad='php app/console assetic:dump'

alias symfcc='php bin/console cache:clear'
alias symfai='php bin/console assets:install'
alias symfall='symfai && symfcc'

# portoflio
alias portfolio='cd /usr/share/nginx/html/portfolio/'

