alias work="$HOME/workspace"        # general workspace
alias dot="$HOME/.dotfiles"         # dotfiles
alias media="/run/media/$USER"

# Freebrain
alias freebrain="freemind $CLOUD/knowledge_base/_BRAINSTORMING/* &"

alias gosrc="$GOPATH/src/" # golang src
alias gobin="$GOPATH/bin/" # golang gin
