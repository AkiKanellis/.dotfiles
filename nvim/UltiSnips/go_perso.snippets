# functions test
snippet /^test/ "Main function" r
func Test${1:Func}(t *testing.T) {
	${0:${VISUAL}}
}
endsnippet

snippet tt "table-driven tests"
func Test${1:Func}(t *testing.T) {
	testCases := []struct {
		name string
		${2:} ${3:}
	}{
		{
			name: "${4:Happy case}",
		},
	}

	for _, tc := range testCases {
		t.Run(tc.name, func(t *testing.T) {
			if tc.2 != thing {
				t.Errorf("Expected %s, actual %s", tc.want)
			}
		})
	}
}
endsnippet

